<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dimen_medium"
    android:paddingVertical="@dimen/dimen_small">

    <TextView
        android:id="@+id/tv_post_detail_comment_author"
        style="@style/PostCommentAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_post_detail_comment_body"
        style="@style/PostCommentBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_tiny"
        app:layout_constraintTop_toBottomOf="@id/tv_post_detail_comment_author" />

</androidx.constraintlayout.widget.ConstraintLayout>